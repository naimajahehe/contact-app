<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <% if (typeof errors != 'undefined') { %>
            <div class="alert alert-danger" role="alert">
                <ul>
                    <% errors.forEach(error => { %>
                     <li><%= error.msg  %></li>
                    <% }) %>
                </ul>
            </div>
            <% } %>
            <h2>Ubah Data Contact</h2>
            <form method="post" action="/contact/update">
                <input type="hidden" name="oldNama" value="<%= contact.oldNama || contact.nama  %>" />
                <div class="mb-3">
                  <label for="nama">Nama</label>
                  <input type="text" class="form-control" id="nama" name="nama" required value="<%= contact.nama  %>">
                </div>

                <div class="mb-3">
                  <label for="email">Email</label>
                  <input type="email" class="form-control" id="email" name="email" required value="<%= contact.email  %>">
                </div>

                <div class="mb-3">
                  <label for="nomorHP">Nomor HP</label>
                  <input type="number" class="form-control" id="nomorHP" name="nomorHP" required value="<%= contact.nomorHP  %>">
                </div>
                <button type="submit" class="btn btn-primary">Ubah Data Contact</button>
                <a href="/contact" class="btn btn-secondary">Kembali</a>
              </form>
        </div>
    </div>
</div>